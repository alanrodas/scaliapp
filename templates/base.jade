doctype html
html
	head
		block title
			title Some title
			meta(name="description" content="The site's description")
			meta(name="author" content="John Doe")
			meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1")
			base(href="./")
		block favicons
			link(rel="shortcut icon" href="images/favicon.ico")
			link(rel="apple-touch-icon" href="images/apple-touch-icon.png")
			link(rel="apple-touch-icon" sizes="72x72" href="images/apple-touch-icon-72x72.png")
			link(rel="apple-touch-icon" sizes="114x114" href="images/apple-touch-icon-114x114.png")
		block append stylesheets
			link(rel="stylesheet" href="stylesheets/bootstrap.min.css")
			link(rel="stylesheet" href="stylesheets/bootstrap-ext.css")
			link(rel="stylesheet" href="stylesheets/font-awesome.min.css")
			link(rel="stylesheet" href="stylesheets/prism.css")
		block append fonts
	body
		include toolbar
		block toolbar
		block content
		include footer
		block footer
			+copyright(2014, "John Doe")
		block append scripts
			script(type="text/javascript" src="scripts/jquery-2.1.1.min.js")
			script(type="text/javascript" src="scripts/jquery-ui-1.9.2.custom.min.js")
			script(type="text/javascript" src="scripts/bootstrap.min.js")
			script(type="text/javascript" src="scripts/bootstrap-ext.js")
			script(type="text/javascript" src="scripts/prism.js")
